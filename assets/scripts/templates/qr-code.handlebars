<i class="fas fa-qrcode qr-code" data-id="{{id}}" data-toggle="modal" data-target="#qr-code-modal-{{id}}"></i>
<div class="modal" id="qr-code-modal-{{id}}">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">QR Code</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p class="text-center">
          <img src={{qr}} alt='code'>
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-info close-update-btn modal-submit-button" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
