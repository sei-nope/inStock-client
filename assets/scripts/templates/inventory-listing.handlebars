<table class="table table-hover table-sm inventory-content">
  <thead>
    <tr>
      <th scope="col">Item</th>
      <th scope="col">Quantity</th>
      <th scope="col">Price</th>
      <th scope="col">Edit/Del</th>
      <th scope="col">QR code</th>
    </tr>
  </thead>
  <tbody id="item">
    {{#if inventories}}
      {{#each inventories as |inventory|}}
        <tr id="{{inventory._id}}" data-id="{{inventory._id}}" class="inventory-listing">
          <td>{{inventory.name}}</td>
          <td>
            {{inventory.quantity}}
            {{> quick-change-add id=inventory._id quantity=inventory.quantity}}
            {{> quick-change-minus id=inventory._id quantity=inventory.quantity}}
          </td>
          <td>${{inventory.price}}</td>
          <td>
            {{> update-inventory id=inventory._id}}
            {{> delete-inventory id=inventory._id}}
          </td>
          <td>
            {{> qr-code id=inventory._id qr=inventory.qr}}
          </td>
        </tr>
      {{/each}}
    {{/if}}
  </tbody>
</table>
